NAME=fragtrap
OBJS=src/main.o src/ClapTrap.o src/ScavTrap.o src/FragTrap.o
INCLUDE=src/ClapTrap.hpp src/ScavTrap.hpp src/FragTrap.hpp
CXX= c++
CFLAGS=-Wall -Wextra -Werror -std=c++98 
GREEN = \033[32m
YELLOW = \033[33m
RESET = \033[0m
RED = \033[31m

all: $(NAME) 
	@echo Execute o Programa: ./fragtrap

$(NAME): $(OBJS)
	@$(CXX) $(CFLAGS) $(OBJS) -o $(NAME) 
	@echo -e "$(GREEN)[âœ“] Compilado: $(NAME)$(RESET)"

$(OBJS): $(INCLUDE)

clean:
	rm -f $(OBJS)
	rm -rf objs
	@echo -e "$(RED)Objectos eliminados$(RESET)"

fclean: clean
	@rm -rf $(NAME)

re: fclean  all

